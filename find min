#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
int num1, num2, num3, minValue;
//Input three numbers
cout << "Enter first number: ";
cin >> num1;
cout << "Enter second number: ";
cin >> num2;
cout << "Enter third number: ";
cin >> num3;

//Compare num1 and num2
if (num1 < num2)
minValue = num1;
else
minValue = num2;
//Compare minValue with num3
if (num3 < minValue)
minValue = num3;
//Output the smallest number
cout << "The smallest number is: " << minValue << end1;
return 0;
}
